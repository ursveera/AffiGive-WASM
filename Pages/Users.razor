@page "/admin/users"
@using AffiGive_API_V1.Models
@using WASM.api
@inject IUserApi UserApi
@inject NavigationManager Nav

<h3 class="mb-3">👥 Users</h3>

@if (users == null)
{
    <p class="text-muted">Loading users...</p>
}
else if (!users.Any())
{
    <div class="alert alert-warning">No users found.</div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle small">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Account</th>
                        <th>Created</th>
                        <th>Last Login</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (u, i) in users.Select((v, i) => (v, i + 1)))
                    {
                        <tr class="@(IsSelectedUser(u) ? "table-warning fw-semibold" : "")">
                            <td>@i</td>

                            <td>
                                <img src="@u.ProfileImage"
                                     class="rounded-circle me-2"
                                     style="width:32px;height:32px"
                                     onerror="this.style.display='none'" />

                                <button class="btn btn-link p-0 fw-semibold"
                                        @onclick="() => ShowUserCoins(u)">
                                    @(u.Name ?? "(No Name)")
                                </button>
                            </td>

                            <td>@u.Email</td>
                            <td>@u.Phone</td>

                            <td>
                                <span class="badge @(u.isActive ? "bg-success" : "bg-danger")">
                                    @(u.isActive ? "Active" : "Inactive")
                                </span>
                            </td>

                            <td>@u.AccountStatus</td>
                            <td>@u.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>@u.LastLogin.ToString("dd MMM yyyy")</td>

                            <td>
                                <button class="btn btn-outline-secondary btn-sm"
                                        @onclick="() => ShowUser(u)">
                                    👁 View
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (selectedUser != null)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,.5)">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">👤 User Details</h5>
                    <button class="btn-close" @onclick="CloseUser"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">

                        <div class="col-md-3 text-center">
                            <img src="@selectedUser.ProfileImage"
                                 class="img-fluid rounded-circle mb-2"
                                 style="max-width:120px"
                                 onerror="this.style.display='none'" />
                        </div>

                        <div class="col-md-9">
                            <p><b>ID:</b> @selectedUser.Id</p>
                            <p><b>Google ID:</b> @selectedUser.GoogleId</p>
                            <p><b>Name:</b> @selectedUser.Name</p>
                            <p><b>Nick Name:</b> @selectedUser.NickName</p>
                            <p><b>Email:</b> @selectedUser.Email</p>
                            <p><b>Phone:</b> @selectedUser.Phone</p>
                            <p><b>Address:</b> @selectedUser.Address</p>
                        </div>

                        <hr />

                        <div class="col-md-6">
                            <p><b>Invite Code:</b> @selectedUser.InviteCode</p>
                            <p><b>Invited By:</b> @selectedUser.InvitedByUserId</p>
                            <p><b>Account Status:</b> @selectedUser.AccountStatus</p>
                            <p><b>Active:</b> @(selectedUser.isActive ? "Yes" : "No")</p>
                        </div>

                        <div class="col-md-6">
                            <p><b>Created At:</b> @selectedUser.CreatedAt</p>
                            <p><b>Last Login:</b> @selectedUser.LastLogin</p>
                            <p><b>Deleted At:</b> @selectedUser.DeletedAt</p>
                        </div>

                        <hr />

                        <div class="col-12">
                            <p><b>Refresh Token:</b></p>
                            <code class="small text-break">
                                @selectedUser.RefreshToken
                            </code>
                            <p class="mt-2">
                                <b>Token Expiry:</b> @selectedUser.RefreshTokenExpiry
                            </p>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseUser">
                        Close
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@code {

    private List<User>? users;
    private User? selectedUser;
    private string? selectedUserId;

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(Nav.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var selectedUserId = query["selectedUserId"];

        users = await UserApi.GetAllUsersAsync();
    }

    private void ShowUser(User u)
    {
        selectedUser = u;
    }
    private void ShowUserCoins(User u)
    {
        Nav.NavigateTo($"/admin/users/{u.Id}");
    }

    private void CloseUser()
    {
        selectedUser = null;
    }

    private bool IsSelectedUser(User u)
    {
        if (string.IsNullOrEmpty(selectedUserId))
            return false;

        return u.Id.ToString() == selectedUserId;
    }
}
